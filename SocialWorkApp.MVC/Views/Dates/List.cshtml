@model DatesListViewModel

<div class="container-fluid px-4">
    <h1 class="mt-4">Dates for @Model.Client.FirstName @Model.Client.LastName</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">BSC Hub</li>
        <li class="breadcrumb-item">Clients</li>
        <li class="breadcrumb-item">@Model.Client.FirstName @Model.Client.LastName</li>
        <li class="breadcrumb-item active">Dates</li>
    </ol>

    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addYear">Add ISP Year</button>


    @foreach (var year in Model.ISP_Years)
    {
        <table class="table table-bordered data-table mt-3" style="table-layout: fixed; width: 100%;">
            <thead>
                <tr>
                    <th>ISP Year Start Date</th>
                    <th>@year.StartDate</th>
                    <td style="min-width:200px;">
                        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#edit-start-@year.ISP_YearId">Edit</button>
                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#delete-start-@year.ISP_YearId">Delete</button>
                    </td>
                </tr>
            </thead>
            <tbody>


                @if (year.MeetingDate is null)
                {
                <tr class="table-warning">
                        <th>ISP Meeting Date</th>
                        <td>Not Set</td>
                        <td style="min-width:200px;" class="table-warning">
                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#set-meeting-@year.ISP_YearId">Set</button>
                        </td>
                </tr>
                }
                else
                {
                <tr>
                        <td>ISP Meeting Date</td>
                        <td>@year.MeetingDate</td>
                        <td style="min-width:200px;">
                        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#edit-meeting-@year.ISP_YearId">Edit</button>
                    </td>
                </tr>
                }
                
            </tbody>
        </table>





        <div class="modal fade" id="delete-start-@year.ISP_YearId" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">
                            Delete ISP Year
                        </h5>
                    </div>
                    <div class="modal-body">

                        <p>Are you sure that you want to remove the ISP Year starting on @year.StartDate from the system? This will also remove the meeting date.</p>

                        <form asp-action="DeleteYear" asp-route-ISP_YearId="@year.ISP_YearId" asp-route-clientId="@Model.Client.ClientId" method="post" role="form">
                            <input type="submit" class="btn btn-primary" value="Delete ISP Year" />
                        </form>
                    </div>

                </div>
            </div>
        </div>


        <div class="modal fade" id="edit-start-@year.ISP_YearId" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">
                            Update ISP Year Start Date
                        </h5>
                    </div>
                    <div class="modal-body">


                        <form asp-action="UpdateYear" asp-route-newYearStart="@Model.NewYearStart" asp-route-ISP_YearId="@year.ISP_YearId" asp-route-clientId="@Model.Client.ClientId" method="post" role="form">

                            <div class="mb-3">
                                <label asp-for="@Model.NewYearStart" class="form-label">ISP Year Start Date</label>
                                <input asp-for="@Model.NewYearStart" class="form-control" />
                            </div>
                            <div class="mb-3 mt-3">
                                <input type="submit" class="btn btn-primary" value="Update Start Date" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="modal fade" id="set-meeting-@year.ISP_YearId" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">
                            Set ISP Meeting Date
                        </h5>
                    </div>
                    <div class="modal-body">


                        <form asp-action="SetMeetingDate" asp-route-meetingDate="@Model.NewSetMeetingDate" asp-route-ISP_YearId="@year.ISP_YearId" asp-route-clientId="@Model.Client.ClientId" method="post" role="form">

                            <div class="mb-3">
                                <label asp-for="NewSetMeetingDate" class="form-label">ISP Meeting Date</label>
                                <input asp-for="NewSetMeetingDate" class="form-control" />
                            </div>
                            <div class="mb-3 mt-3">
                                <input type="submit" class="btn btn-primary" value="Set Date" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>


        @* <div class="modal fade" id="edit-meeting-@year.ISP_YearId" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">
                            Update ISP Meeting Date
                        </h5>
                    </div>
                    <div class="modal-body">


                        <form asp-action="SetMeetingDate" asp-route-meetingDate="@Model.NewMeetingDate" asp-route-ISP_YearId="@year.ISP_YearId" asp-route-clientId="@Model.Client.ClientId" method="post" role="form">

                            <div class="mb-3">
                                <label asp-for="@Model.NewMeetingDate" class="form-label">ISP Meeting Date</label>
                                <input asp-for="@Model.NewMeetingDate" class="form-control" />
                            </div>
                            <div class="mb-3 mt-3">
                                <input type="submit" class="btn btn-primary" value="Update Date" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
 *@

    }


    <div class="modal fade" id="addYear" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Add Year
                    </h5>
                </div>
                <div class="modal-body">
                    <p> Enter the Start Date of the New ISP Year</p>
                    <form asp-action="AddYear" asp-route-clientId="@Model.Client.ClientId" method="post" role="form">

                        <div class="mb-3">
                            <label asp-for="NewYearStart" class="form-label">New Year Start</label>
                            <input asp-for="NewYearStart" class="form-control" />
                        </div>
                        <div class="mb-3 mt-3">
                            <input type="submit" class="btn btn-primary" value="Add Year" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>



