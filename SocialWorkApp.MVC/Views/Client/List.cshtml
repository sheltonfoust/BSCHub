@model ClientListViewModel


<div class="container-fluid px-4">
<h1 class="mt-4">All Clients</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">BSC Hub</li>
    <li class="breadcrumb-item active">All Clients</li>
</ol>


    <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#clientEntry">Add Client</a>

    <table class="table">

        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Provider</th>
                <th>ISP Start Date</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    @if (client.Provider == null)
                    {
                        <td></td>
                    }
                    else
                    {
                    <td>@client.Provider.FirstName @client.Provider.LastName</td>
                    }
                    <td>@client.ISP_YearStartDate</td>
                    <td>
                        <button class="btn btn-sm btn-primary">Edit</button>
                        </td>
                </tr>
            }
        </tbody>

    </table>

    <div class="modal fade" id="clientEntry" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">
                        Add New Client
                    </h5>
                </div>
                <div class="modal-body">
                    <vc:client-form providers="@Model.Providers"></vc:client-form>
                </div>
                
            </div>
        </div>
    </div>


</div>

