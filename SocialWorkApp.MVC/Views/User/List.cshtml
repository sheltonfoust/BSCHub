@model UserListViewModel

<div class="container-fluid px-4">
    <h1 class="mt-4">Users</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">BSC Hub</li>
        <li class="breadcrumb-item active">Users</li>
    </ol>

    <a class="btn btn-primary">Add User</a>
    <table class="table table-bordered mt-3" style="table-layout: fixed; width: 100%;">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Is Admin</th>
                <th>Is Provider</th>
                <th>Is Independent</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    @if (user.IsAdmin)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    @if (user.IsProvider)
                    {
                        <td>Yes</td>
                    }
                    else
                    {
                        <td>No</td>
                    }
                    @if (user.IsProvider && user.Provider != null)
                    {
                        if (user.Provider.IsIndependent)
                        {
                            <td>Yes</td>
                        }
                        else
                        {
                            <td>No</td>
                        }
                    }
                    else
                    {
                        <td></td>
                    }
                    <td style="min-width:200px;">
                        <a class="btn btn-sm btn-primary">
                            Edit <i class="fas fa-external-link"></i>
                        </a>
                        <button class="btn btn-sm btn-primary">Remove</button>
                        <a class="btn btn-sm btn-primary">
                            Clients <i class="fas fa-external-link"></i>
                        </a>
                        <a class="btn btn-sm btn-primary">
                            Reports <i class="fas fa-external-link"></i>
                        </a>
                    </td>


                </tr>
            }
        </tbody>





    </table>

</div>